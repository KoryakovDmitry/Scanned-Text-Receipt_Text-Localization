{
    "name": "PAN",
    "data_loader": {
        "type": "ImageDataset",
        "args": {
            "dataset": {
                "train_data_path": [
                    [
                        "../dataset/train_dataset_task1_all_files_denoise_randomVerflip.txt"
                      
                    ]
                ],
                "train_data_ratio": [
                    0.5,
                    0.5
                ],
                "val_data_path": "../dataset/path_for_val_aug_denoise_randomVerflip",
                "input_size": 640,
                "img_channel": 3,
                "shrink_ratio": 0.5
            },
            "loader": {
                "validation_split": 0.1,
                "train_batch_size": 23,
                "shuffle": true,
                "pin_memory": true,
                "num_workers": 8
            }
        }
    },
    "arch": {
        "type": "PANModel",
        "args": {
            "backbone": "resnet18",
            "fpem_repeat": 2,
            "pretrained": true,
            "segmentation_head": "FPEM_FFM"
        }
    },
    "loss": {
        "type": "PANLoss",
        "args": {
            "alpha": 0.5,
            "beta": 0.25,
            "delta_agg": 0.5,
            "delta_dis": 3,
            "ohem_ratio": 3
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 200,
            "gamma": 0.1
        }
    },
    "trainer": {
        "seed": 2,
        "gpus": [
		0, 1
        ],
        "epochs": 600,
        "display_interval": 15,
        "show_images_interval": 50,
        "resume_checkpoint": "output/PAN_resnet18_FPEM_FFM/checkpoint/PANNet_latest.pth",
        "finetune_checkpoint": "",
        "output_dir": "output",
        "tensorboard": true,
        "metrics": "hmean"
    }
}
